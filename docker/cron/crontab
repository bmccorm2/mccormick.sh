# do daily/weekly/monthly maintenance
# min	hour	day	month	weekday	command
*/15	*	*	*	*	run-parts /etc/periodic/15min
0	*	*	*	*	run-parts /etc/periodic/hourly
# 0	2	*	*	*	run-parts /etc/periodic/daily
0	3	*	*	6	run-parts /etc/periodic/weekly
0	5	1	*	*	run-parts /etc/periodic/monthly
*/5  *  *  *  * docker exec -u www-data nextcloud php -f /var/www/html/cron.php
0 3 * * 0 docker exec -u www-data nextcloud ./occ db:add-missing-indices

# FirestoneLodging Certs
0 3 * * * docker run --rm \
  -p 80:80 \
  -v /opt/letsencrypt:/etc/letsencrypt \
  -v /opt/letsencrypt-lib:/var/lib/letsencrypt \
  certbot/certbot renew \
  --quiet && docker restart mail